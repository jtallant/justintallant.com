{% extends 'layouts/master' %}

{% block metaDescription %}
    {% if entry.description %}
        <meta name="description" content="{{ entry.description }}">
    {% endif %}
{% endblock %}

{% block content %}
    <article id="entry">
        <header>
            <h1>{{ entry.title }}</h1>
            <time pubdate="pubdate">{{ entry.date }}</time>
        </header>

        {{ entry.content | raw }}

        <footer>
            {% include 'partials/taxonomies' %}
        </footer>
    </article>
{% endblock content %}