<div class="comment" data-comment-id="{{ child.id }}" data-root-comment-id="{{ parent.id }}">
    <div class="comment-author">
        {{ comment.imgHtml()|raw }}
        <span class="author-name">{{ child.displayName }}</span>
    </div>
    <time>{{ child.date }}</time>
    <div class="comment-content">
        {{ child.content|striptags('<br>')|raw }}
    </div>

    <a class="reply-button" href="javascript:void(0)">
        {% include 'svg/comment.twig' %}
    </a>
</div> <!-- .comment -->

