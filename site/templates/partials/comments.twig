<div class="comments">
    <div class="comments-header">
        <h4>Comments</h4>
        <a href="javascript:void">{% include 'svg/plus.twig' %}</a>
    </div>

    <div class="new-comment">
        {% include 'svg/comment.twig' %}
        <a href="javascript:void">New Comment</a>
    </div>

    <form class="comment-form">
        <div class="form-group">
            <label for="author">Name</label>
            <input type="text" name="comment_author" required>
            <input type="hidden" name="entry_uri" value="{{ entry.uri }}">
        </div>
        <div class="form-group">
            <label for="content">Comment</label>
            <textarea name="content" rows="4" required></textarea>
        </div>
        <div class="char-count">
            <span>2400</span> characters remaining
        </div>
        <button type="submit">Submit Comment</button>
    </form>

    {% for comment in comments().getEntryComments(entry.uri) %}
        <div class="comment">
            <div class="comment-author">
                {% if comment.is_author %}
                    <img class="author-img" src="/img/justin-icon.jpg" alt="Justin Tallant" />
                {% else %}
                    <div class="author-img"></div>
                {% endif %}
                <span class="author-name">{{ comment.author }}</span>
            </div>
            <div class="comment-content">
                <p>
                    {{ comment.content }}
                </p>
            </div>
        </div> <!-- .comment -->
    {% endfor %}
</div>

<script src="/js/comments.js"></script>