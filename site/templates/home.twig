%}


{% extends 'layouts/master' %}

{% block title %}
    {{ skimpy.site.title }} - {{ skimpy.site.tagline }}
{% endblock title %}

{% block styles %}
    <style>
        .justin-photo {
            display:none;
        }
    </style>
{% endblock styles %}

{% block metaDescription %}
    <meta name="description" content="{{ skimpy.site.meta_description }}">
{% endblock metaDescription %}

{% block content %}
    <img src="/img/justin.jpg" alt="Justin Tallant" class="mt-12 rounded-full w-16 h-16 md:w-18 md:h-18 object-cover">

    <p class="text-xl sm:text-2xl mt-10 font-semibold tracking-wider hidden">
        Justin Tallant
    </p>

    <h1 class="mt-6 text-4xl md:text-5xl font-bold tracking-tight text-zinc-800 dark:text-white max-w-screen-md">
        <div class="leading-tight">
            Software engineer with expertise in
            <span class="bg-yellow-200 dark:bg-transparent px-2">Laravel</span>,
            <span class="bg-cyan-200 dark:bg-transparent px-2">Vue</span>, and
            <span class="bg-pink-200 dark:bg-transparent px-2">AI Agents</span>
        </div>
    </h1>

    <p class="mt-6 leading-relaxed max-w-screen-sm">
        I'm Justin, a seasoned developer specializing in AI agent development and Laravel web applications. With a strong background in Vue.js, I excel at creating innovative, user-centric solutions. I aim to contribute my expertise to forward-thinking projects in the AI and web development sectors.
    </p>

    {% include 'partials/socials.twig' %}

    <div class="flex justify-center space-x-10 mt-10">
        <div class="w-48 h-48 bg-zinc-300"></div>
        <div class="w-48 h-48 bg-zinc-300"></div>
    </div>

    <div id="home-bottom" >

        {# ARTICLES #}
        <div class="articles">
            {% for entry in entries %}
                {% include 'partials/article' %}
            {% endfor %}
        </div>

        {# WORK #}
        <div class="sidebar">
            <div class="rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40">
                <h2 class="flex text-sm font-semibold text-zinc-900 dark:text-zinc-100">
                    {% include 'svg/suitcase.twig' %}
                    <span class="ml-3">Work</span>
                </h2>
                <ol class="mt-6 space-y-4">
                    {% for company in companies %}
                        <li class="flex gap-4">
                            <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                                <img alt="" loading="lazy" width="32" height="32" decoding="async" data-nimg="1" class="h-7 w-7" src="{{ company.img }}" />
                            </div>
                            <dl class="flex flex-auto flex-wrap gap-x-2">
                                <dt class="sr-only">{{ company.name }}</dt>
                                <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">{{ company.name }}</dd>
                                <dt class="sr-only">Role</dt>
                                <dd class="text-xs text-zinc-500 dark:text-zinc-400">{{ company.title }}</dd>
                                <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500">
                                    <time>{{ company.start_year }}</time> <span aria-hidden="true">â€”</span> <time>{{ company.end_year }}</time>
                                </dd>
                            </dl>
                        </li>
                    {% endfor %}
                </ol>
            </div>
        </div>
    </div>
{% endblock content %}